<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpamp</p>
            <div class="list-group">
                <li class="list-group-item active" >item1</li>
                <li class="list-group-item">item2</li>
                <li class="list-group-item">item2</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=campgrounds.image%>" alt="no image">
                <div class="caption">
                    <h4 class="pull-right">$9.99/night only</h4>
                    <a href=""><b><h4><%=campgrounds.name%></h4></b></a>
                    <p><%=campgrounds.description %></p>
                    <p><em>Posted By: <b><%=campgrounds.author.username%></b>  </em> </p>
                    <% if(CurrentUser && campgrounds.author.id.equals(CurrentUser._id)) {%>
                    <a class="btn  btn-warning" href="/campgrounds/<%=campgrounds._id%>/edit">Edit</a>
                    <form class="delete-form" action="/campgrounds/<%=campgrounds._id%>?_method=Delete" method="POST"> 
                    <button  class="btn  btn-danger" >Delete</button>
                    </form>
                    <%}%>
                </div>
               
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campgrounds._id%>/comment/newcomment" class="btn btn-large btn-success">add comment</a>
                </div>
                <hr>
                
                <%campgrounds.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                           <b><%=comment.author.username%> </b> 
                            <span class="pull-right">10 days ago</span>
                            <p><%=comment.text%></p> 
                            <%if(CurrentUser && comment.author.id.equals(CurrentUser._id)){%>
                            <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campgrounds._id%>/comment/<%=comment._id%>/edit">Edit</a>
                            <form class="delete-form" action="/campgrounds/<%=campgrounds._id%>/comment/<%=comment._id%>?_method=Delete" method="POST">
                                <button class="btn btn-xs btn-danger " >Delete</button>
                            </form>
                            <%}%>
                        </div>
                    </div>
                
            <%})%>
            </div>
        </div>
    </div> 

    

   


</div>

<%- include("partials/footer") %>